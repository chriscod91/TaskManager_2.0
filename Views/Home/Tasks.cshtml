<section id="list">
    
    <button class="btn btn-dark" id="showHide">Show/Hide</button>

<h3>Your pending tasks</h3>
    <div id="tasksContainer" class="task-list">
        
    </div>

<h3>Your done tasks</h3>
    <div id="doneContainer" class="done-task-list">

    </div>

</section>

<section id="details">
    <h3>Task information</h3>
    
        <div class="control">
            <label>Title:</label>
            <input type="text" id="txtTitle" class="form-control" />
        </div>

        <div id="warn" class="alert alert-danger hide">
            Error: the <b>Title</b> cannot be empty.
        </div>

        <div class="control">
            <label>description:</label>
            <textarea id="txtDesc" rows="4"></textarea>
        </div>

        <div class="control">
            <label>Important:</label>
            <i id="iImportant" class="fa-solid fa-star"></i>
        </div>

        <div class="control">
            <label>Due Date:</label>
            <input type="datetime-local" id="txtDueDate" class="form-control" />
        </div>

        <div id="myDate" class="alert alert-danger hide">
            Error: the <b>Due Date</b> cannot be empty.
        </div>

        <div class="control">
            <label>Alert Text:</label>
            <select id="alertText" class="form-control">
                <option value="1">Dont forget to:</option>
                <option value="2">stop:</option>
                <option value="3">start:</option>
                <option value="4">get more coffee:</option>
            </select>
        </div>

        <div class="control">
            <label>Location:</label>
            <input type="text" id="txtLocation" class="form-control" />
        </div>
    
    <div class="control">
        <button id="btnSave" class="btn btn-dark">
            Save Task
        </button>
    </div>
</section>

